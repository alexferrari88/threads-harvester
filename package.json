{
  "name": "threads-harvester",
  "version": "1.0.0",
  "description": "A TypeScript library for extracting threaded content from discussion platforms like Reddit, Twitter, and Hacker News",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexferrari88/threads-harvester.git"
  },
  "homepage": "https://github.com/alexferrari88/threads-harvester",
  "bugs": {
    "url": "https://github.com/alexferrari88/threads-harvester/issues"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": ["threads", "discussion-platforms", "content-extraction", "reddit", "twitter", "hackernews", "typescript", "dom"],
  "author": "Alex Ferrari",
  "license": "MIT",
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@vitest/coverage-v8": "^2.1.4",
    "@vitest/ui": "^2.1.4",
    "happy-dom": "^15.11.7",
    "typescript": "^5.8.3",
    "vitest": "^2.1.4"
  }
}
